<nav class="pagination" role="navigation">
    <div class="pagination__previous">
        {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}">&larr; {{t "Newer posts"}}</a>
        {{/if}}
    </div>
    <div class="pagination__number">
        <span class="pagination__number__current">{{t "Page {page} of {pages}" page=page pages=pages}}</span>
    </div>
    <div class="pagination__next">
        {{#if next}}
        <a class="older-posts" href="{{page_url next}}">{{t "Older posts"}} &rarr;</a>
        {{/if}}
    </div>
</nav>